  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@open-wc/testing": "^2.5.8",
    "@open-wc/testing-karma": "^3.3.9",
    "@open-wc/testing-karma-bs": "^1.3.53",
    "@rollup/plugin-json": "^4.0.2",
    "es-dev-server": "^1.45.3",
    "karma-chrome-launcher": "^3.1.0",
    "lerna": "^3.20.2",
    "lit-html": "^1.2.1",
    "node-sass": "^4.13.1",
    "prettier": "2.0.2",
    "puppeteer": "^2.1.1",
    "release": "^6.1.0",
    "rollup": "^2.2.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-livereload": "^1.1.0",
    "rollup-plugin-minify-html-literals": "^1.2.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript": "^1.0.1",
    "webpack-merge": "^4.1.5"
  },
  "scripts": {
    "start": "lerna run start --stream",
    "lint": "lerna run --parallel lint",
    "pack": "lerna run pack",
    "bundle": "lerna run bundle",
    "clean": "rm -rf node_modules; lerna run clean",
    "init": "  npm install && lerna bootstrap",
    "test": "karma start && karma start --grep packages/query-selector/test/*.test.complex.js",
    "test:single": "karma start",
    "test:ci": "npm run build && npm run test",
    "test:coverage": "karma start --coverage",
    "build": "npm run init && npm run bundle"
  },
  "prettier": {
    "printWidth": 180,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
