{
  "name": "bonita-components",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.1",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@open-wc/testing": "^3.0.3",
    "@open-wc/testing-karma": "^4.0.9",
    "@open-wc/testing-karma-bs": "^1.3.94",
    "@rollup/plugin-json": "^4.1.0",
    "es-dev-server": "^2.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "lerna": "^4.0.0",
    "lit-html": "^1.3.0",
    "node-sass": "^7.0.0",
    "postcss": "^8.4.4",
    "prettier": "2.5.1",
    "puppeteer": "^12.0.1",
    "release": "^6.3.0",
    "rollup": "^2.60.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "web-component-analyzer": "^1.1.6",
    "webpack-merge": "^5.8.0"
  },
  "scripts": {
    "start": "lerna run start --stream",
    "lint": "lerna run --parallel lint",
    "pack": "lerna run pack",
    "bundle": "lerna run bundle",
    "clean": "rm -rf node_modules; lerna run clean",
    "init": "  npm install && lerna bootstrap",
    "test": "karma start && karma start --grep packages/misc/query-selector/test/*.test.complex.js",
    "test:single": "karma start",
    "test:ci": "npm run build && npm run test",
    "test:coverage": "karma start --coverage",
    "build": "npm run init && npm run bundle",
    "analyzer": "wca analyze --visibility private --features member cssproperty event --outFiles {dir}/../build/custom-element.json && wca analyze --format markdown --visibility private --features member cssproperty event --outFiles {dir}/../build/custom-element.md"
  },
  "prettier": {
    "printWidth": 180,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
