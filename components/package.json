{
  "name": "bonita-components",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.1",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.5.0",
    "lerna": "^3.18.3",
    "lit-html": "^1.1.2",
    "node-sass": "^4.13.0",
    "prettier": "1.16.4",
    "release": "^6.1.0",
    "rollup": "^1.26.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-index-html": "^1.7.5",
    "rollup-plugin-lit-css": "^2.0.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-minify-html-literals": "^1.2.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "@rollup/plugin-json": "^4.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript": "^1.0.1",
    "webpack-merge": "^4.1.5"
  },
  "scripts": {
    "build": "npm run init && npm run bundle",
    "bundle": "lerna run bundle",
    "compile": "lerna run tsc",
    "init": "  npm install && lerna bootstrap",
    "lint": "lerna run --parallel lint",
    "replaceCss": "find ./packages/**/src/ -name \"*.js\" -exec sed -i 's/.*.scss.*/const style= css``;/' {} +",
    "start": "lerna run start --stream",
    "test": "npm run replaceCss && karma start",
    "test:ci": "npm run build && npm run test"
  },
  "prettier": {
    "printWidth": 180,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
